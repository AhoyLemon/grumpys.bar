mixin address(location, url)
  address
    if (location == 'downtown')
      a(href=map.downtown)
        | 1111 Washington Avenue South
        br
        | Minneapolis, MN 55415

mixin phone(location)
  .phone
    if (location == 'downtown')
      a.tel(href="tel:6123409738") 612-340-9738



mixin location(name,url,image,map,phone)
  .location
    figure(style="background-image:url(img/fpo/"+image+")")
      a(href=url)
    figcaption
      .inner
        a.name(class=name.toLowerCase() href=url)= name
        address
          a.map(href=map)
            block
        .phone-and-social
          .phone
            a.tel(href="tel:"+phone)= phone
          .social
            +iconEmail
            +iconFacebook
            +iconTwitter

mixin footerLocation(name,url,phone)
  .location
    .name
      a(href=url)= name
    if (name == "Downtown")
      +address('downtown')
    else 
      address
        a(href='/')
          block
    .phone
      a.tel(href=phone)= phone
    .social
      +iconEmail
      +iconFacebook
      +iconTwitter